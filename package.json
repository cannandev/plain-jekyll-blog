{
  "name": "plain-jekyll-blog",
  "version": "1.0.0",
  "description": "A plain ole Jekyll blog flavored with Tailwindcss and ES Javascript",
  "main": "index.js",
  "dependencies": {
    "postcss": "^8.4.6"
  },
  "devDependencies": {
    "selenium-webdriver": "^4.1.1",
    "tailwindcss": "^3.0.18"
  },
  "scripts": {
    "build": "bundle exec jekyll build",
    "watch": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "start": "bundle exec jekyll serve & npm run watch",
    "pa11y": "pa11y-ci -s http://localhost:4000/sitemap.xml -x .xml",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cannandev/plain-jekyll-blog.git"
  },
